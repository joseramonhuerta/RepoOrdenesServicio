<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.eletronica.ordenesservicioapp">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- <uses-permission android:name="android.permission.CAMERA" /> -->
    <uses-permission
        android:name="android.permission.ACCESS_NETWORK_STATE"
        android:maxSdkVersion="19" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="19" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        tools:replace="android:icon"
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InicioSesion"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ReporteGastos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NuevoGasto"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Gastos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NuevoUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Usuarios"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NuevoCliente"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NuevaOrdenServicio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OrdenesServicios"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu"
            android:screenOrientation="portrait" />
        <activity android:name=".Clientes" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.eletronica.ordenesservicioapp.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewOrdenServicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppThemeNoActionBar"
    tools:context=".OrdenesServicios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarOrdenesServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fondo_toolbar"
            android:minHeight="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnAtrasOrdenes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/back" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"

                    android:text="Ordenes Servicio"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/btnBuscarQr"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/barcodeqr"


                    />

                <ImageView
                    android:id="@+id/btnNuevaOrden"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/add"


                    />


            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:padding="5dp">

            <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#fff"
                android:hint="Busqueda..."
                tools:context=".SearchAndFilterList"

                />

            <ImageView
                android:id="@+id/btnBusquedaOrdenes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="#fff"
                app:srcCompat="@drawable/lupa3" />

            <ImageView
                android:id="@+id/btnClearSearch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="#fff"
                app:srcCompat="@drawable/borrar" />


            <ImageView
                android:id="@+id/btnCalendario"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="#fff"
                app:srcCompat="@drawable/calendar" />

            <ImageView
                android:id="@+id/btnFiltroSearch"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:background="#fff"
                app:srcCompat="@drawable/filter" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtFiltros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnFiltroSearch"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:text="Periodo: 20/09/2020 - 22/09/2020 status: todos"
            android:textColor="#198CE9"
            android:textSize="12sp"
            android:textStyle="bold|italic" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listViewTecnicos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFiltros"
            android:background="@color/fondo_menu_tecnicos"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="horizontal">

        </androidx.recyclerview.widget.RecyclerView>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/listViewOrdenes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFiltros"
                android:divider="@android:color/transparent">

            </ListView>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>


</RelativeLayout>